@page
@model NBAStatsApp.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="border: 2px solid blue; padding: 10px; color: blue; font-weight: bold;">
    Games
</h1><p>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<form>
    <div>
        <p>
            Find by Team Name or GameDate:
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].HomeTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].AwayTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].GameDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].HomeTeamScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].AwayTeamScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Game) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeam.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeam.Name)   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeamScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeamScore)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
