@page
@model NBAStatsApp.Pages.Games.DetailsModel

@{
    ViewData["Title"] = "Game Details";
}

<h1>Game Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.HomeTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.HomeTeam.Name) <!-- שם קבוצה הבית -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.AwayTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.AwayTeam.Name) <!-- שם קבוצה החוץ -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameDate) <!-- תאריך המשחק -->
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Game.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
