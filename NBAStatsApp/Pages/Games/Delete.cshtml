@page
@model NBAStatsApp.Pages.Games.DeleteModel

@{
    ViewData["Title"] = "Delete Game";
}

<h1>Delete Game</h1>

<h3>Are you sure you want to delete this game?</h3>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.HomeTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.HomeTeam.Name) <!-- שם קבוצה הבית -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.AwayTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.AwayTeam.Name) <!-- שם קבוצה החוץ -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameDate) <!-- תאריך המשחק -->
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
